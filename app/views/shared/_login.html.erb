<div id="login_wrapper" class="row offset2 span8">
	<div id="sign_up" class="span4">
		<h2>Sign up</h2>
		<%= semantic_form_for resource, :as => resource_name, :url => registration_path(resource_name) do |f| %>
		  <%= f.inputs do %>
		  	<%= f.input :first_name, label: false, placeholder: "First Name" %>
		  	<%= f.input :last_name, label: false, placeholder: "Last Name" %>
		  	<%= f.input :email, label: false, placeholder: "Email" %>
		  	<%= f.input :password, label: false, placeholder: "Password" %>
		  	<%= f.input :password_confirmation, label: false, placeholder: "Password Confirmation" %>
		  <% end %>
		  <%= f.actions do %>
		  	<%= f.action :submit, label: "Sign up" , button_html: {class: "btn btn-warning"} %>
		  <% end %>
		<% end %>
	</div>
	<div id="sign_in" class="span4">
		<h2>Sign in</h2>
		<%= semantic_form_for "user", :as => resource_name, :url => session_path(resource_name) do |f| %>
			<%= f.inputs do %>
				<%= f.input :email, label: false, placeholder: "Email" %>
				<%= f.input :password, label: false, placeholder: "Password" %>
			<% end %>

		  <% if devise_mapping.rememberable? %>
		    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
		  <% end %>

		  <%= f.actions do %>
		  	<%= f.action :submit, label: "Sign in" , button_html: {class: "btn btn-success"} %>
		  <% end %>
		<% end %>
	</div>
</div>