<div id="invite_wrap" class="offset1 span9">
	<div class="pikachoose">
		<ul id="pikame">
			<li>
				<img src="<%= image_path('couple0.jpeg') %>"/>
			</li>
			<li>
				<img src="<%= image_path('couple1.jpeg') %>"/>
			</li>
			<li>
				<img src="<%= image_path('couple2.jpeg') %>"/>
			</li>
			<li>
				<img src="<%= image_path('couple3.jpeg') %>"/>
			</li>
			<li>
				<img src="<%= image_path('couple4.jpeg') %>"/>
			</li>
		</ul>
	</div>

	<div id="text">
		<p id="primary">Save the Date</p>
		<p id="secondary">
			Ron & Neta | May 9, 2014
		</p>
		<a href="http://example.com/link-to-your-event" title="Add to Calendar" id="btn_calendar" class="addthisevent">
		  Add to Calendar
		  <span class="_start">09-05-2014 15:00:00</span>
		  <span class="_end">10-05-2014 08:00:00</span>
		  <span class="_zonecode">52</span>
		  <span class="_summary">Ron and Neta's Wedding</span>
		  <span class="_location">Sderot Rokah 2, Tel Aviv-Yafo, Israel</span>
		  <span class="_organizer">Ron Gilat</span>
		  <span class="_organizer_email">ron.gilat@gmail.com</span>
		  <span class="_date_format">DD/MM/YYYY</span>
		</a>
	</div>

	<div id="jquery_jplayer_1"></div>
</div>

<script type="text/javascript" src="http://js.addthisevent.com/atemay.js"></script>
<script language="javascript">
	$(document).ready(
		function (){
			$("#pikame").PikaChoose();
			$("#jquery_jplayer_1").jPlayer({
        ready: function() {
          $(this).jPlayer("setMedia", {
            mp3: "<%= audio_path('wedding_song.mp3') %>"
          }).jPlayer("play");
          var click = document.ontouchstart === undefined ? 'click' : 'touchstart';
          var kickoff = function () {
            $("#jquery_jplayer_1").jPlayer("play");
            document.documentElement.removeEventListener(click, kickoff, true);
          };
          document.documentElement.addEventListener(click, kickoff, true);
        },
        loop: true,
        swfPath: "/js"
      });
		});
</script>