<div class="container">
	<div>
		<table class="table table-hover table-striped">
			<tr>
				<th>Name</th>
				<th>Users</th>
				<th></th>
				<th></th>
			</tr>
			<% @roles.each do |role| %>
				<tr>
					<td><%= role.name %></td>
					<td>
						<% role.users.each do |user| %>
						<li><%= user.display_name %></li>
						<% end %>
					</td>
					<td><%= link_to (raw '<i class="icon-pencil"></i>'), edit_workplace_role_path(@workplace, role) %></td>
					<td><%= link_to (raw '<i class="icon-trash"></i>'), [@workplace, role], method: :delete, data: { confirm: 'Are you sure?' } %></td>
				</tr>
			<% end %>
		</table>
	</div>
	<div>
		<%= link_to 'New', new_workplace_role_path(@workplace), class: 'btn btn-success' %>
	</div>
</div>