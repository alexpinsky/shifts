<div id="shift_form">
	<h4>New Shift</h4>
	<%= semantic_form_for [@work_place, @shift] do |f| %>
		<%= f.inputs do %>
			<%= f.input :name %>
			<%= f.input :role, as: :select %>
			<%= f.input :start_time %>
			<%= f.input :end_time %>
		<% end %>
		<%= f.actions do %>
			<%= f.action :submit, label: 'Create', button_html: { class: "btn btn-success" } %>
		<% end %>
	<% end %>
</div>